{
  "name": "aws-ca",
  "version": "0.1.0",
  "author": "Justin Tay",
  "bin": {
    "aws-ca": "bin/aws-ca.js"
  },
  "scripts": {
    "build:lambda": "node esbuild.config.mjs",
    "build:cdk": "tsc -p tsconfig.cdk.json",
    "build": "npm run build:lambda && npm run build:cdk",
    "watch": "tsc -w",
    "test": "vitest",
    "cdk": "cdk",
    "package": "npm run build:lambda && cdk synth",
    "deploy": "npm run build:lambda && cdk deploy",
    "destroy": "cdk destroy",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "aws-cdk": "2.1025.0",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.873.0",
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/client-secrets-manager": "^3.873.0",
    "@aws-sdk/client-ssm": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.873.0",
    "@aws-solutions-constructs/aws-apigateway-lambda": "^2.92.0",
    "@peculiar/asn1-pkcs8": "^2.4.0",
    "@peculiar/asn1-schema": "^2.4.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@peculiar/x509": "^1.13.0",
    "@types/aws-lambda": "^8.10.152",
    "aws-cdk-lib": "2.212.0",
    "constructs": "^10.4.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "pkijs": "^3.2.5",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false
  }
}
